<UserControl x:Class="Set.Card"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="170" Width="320" ClipToBounds="False" FlowDirection="RightToLeft" Loaded="UserControl_Loaded" Name="CardViewr">
    <Border BorderBrush="#FF000000" BorderThickness="3" Background="White" Name="borderCard" SizeChanged="borderCard_SizeChanged">
    <Grid Width="Auto" Height="Auto" Name="gridCard">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
             </Grid.RowDefinitions>
        </Grid>
    </Border>
</UserControl>
